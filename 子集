#include<stdio.h>
#include<math.h>
#include<stdlib.h>
#include<string.h>
int main()
{
	int i,j,k=0,l,n;
	char a[100],b[100],t;
	printf("请输入字母集合，类似{*,*,*}：\n");
	gets(a);
	l=strlen(a);
	for(i=1;i<l;i++)
		if(a[i]>='a'&&a[i]<='z')
			b[k++]=a[i];
	printf("以下为集合中所包含的字母：\n");
		for(i=0;i<k;i++)
			printf("%c",b[i]);
		printf("\n");
	for(i=0;i<k-1;i++)//n个数的数列总共扫描n-1次
  {
    for(j=0;j<k-i-1;j++)//每一趟扫描到a[n-i-2]与a[n-i-1]比较为止结束
    {
      if(b[j]>b[j+1])//后一位数比前一位数小的话，就交换两个数的位置（升序）
      {
        t=b[j+1];
        b[j+1]=b[j];
        b[j]=t;
      }
    }
  }
	printf("以下为字母按照字典顺序排序：\n");
	for(i=0;i<k;i++)
			printf("%c",b[i]);
	printf("\n");
	n=k;
	printf("当前集合的子集为：\n");
		for(i=1;i<(1<<n);i++)
		{
			k=0;
			printf("{");
			for(j=0;j<n;j++)
			{
				if((i>>j)&1)
				{
					if(k==0)
					{
						printf("%c",b[j]);
						k=1;
					}
					else
						printf(",%c",b[j]);
				}
				
			}
			printf("}\n");
		}
}
